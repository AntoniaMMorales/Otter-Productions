 @model List<OtterProductions_CapstoneProject.Models.Event>


@{
    ViewData["Title"] = "Browsing Search Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body style="background-color: #15202b">
    <div class="text-center">
        <br />
        <h1 id="titleBrowsing" class="display-4">Event Finder</h1>
        <p id="infoBrowsing">Enter your location and we can find local events in your city</p>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <div class="input-group" id="adv-search">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label for="contain" style="color:white">Filter Event Name:</label>
                            <input class="form-control me-sm-2" type="search" placeholder="Name" id="name" name="name">
                        </div>
                        <div class="form-group">
                            <label for="contain" style="color:white">Location Name:</label>
                            <input class="form-control me-sm-2" type="search" placeholder="LocationName" id="location" name="location">
                        </div>
                        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>Search</button>
                    </form>
                </div>
            </div>
        </div>

    
    </div>




<link href="~/css/events.css" rel="stylesheet" />
<a class="nav-link" asp-area="" asp-controller="Organization" asp-action="CreateEvent" role="tab" aria-controls="profile" aria-selected="false">Add New Event</a>

@if (Model != null)
{
    <div class="container">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Event Name</th>
                    <th>Location</th>
                    <th>Description</th>
                    <th>Event Type</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.EventName</td>
                        <td>@item.EventLocation</td>
                        <td>@item.EventDescription</td>
                        <td>@item.Organization.EventType1</td>
                        <td>@item.EventDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h1>Event Not available..</h1>
}





</body>       