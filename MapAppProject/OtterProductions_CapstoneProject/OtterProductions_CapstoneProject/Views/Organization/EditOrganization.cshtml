@model OtterProductions_CapstoneProject.ViewModel.OrganizationViewModel

@{
    ViewData["Title"] = "Edit";
}
<link href="~/css/profile.css" rel="stylesheet" />
<h2> Edit Organization</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOrganization">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AspnetIdentityId" /> 
            <input type="hidden" asp-for="OrganizationPicture" /> 
            <input type="hidden" asp-for="ImageUrl" />
            <input type="hidden" asp-for="OldEmail" />
        
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizationName" class="control-label"></label>
                <input asp-for="OrganizationName" class="form-control" />
                <span asp-validation-for="OrganizationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizationDescription" class="control-label"></label>
                <input asp-for="OrganizationDescription" class="form-control" />
                <span asp-validation-for="OrganizationDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizationLocation" class="control-label"></label>
                <input asp-for="OrganizationLocation" class="form-control" />
                <span asp-validation-for="OrganizationLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


