@model IEnumerable<OtterProductions_CapstoneProject.Models.MapAppUser>

@{
    ViewData["Title"] = "Index";
}

<h1>Map App Users</h1>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.AspnetIdentityId)
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @* Got this line for checkboxes from https://www.c-sharpcorner.com/article/how-to-delete-multiple-rows-using-checkbox-in-mvc-5/*@
                <td><input type="checkbox" name="ID" value="@item.AspnetIdentityId" class="custom-checkbox chkCheckBoxId" /></td>
                <td>
                    @Html.DisplayFor(modelItem => item.AspnetIdentityId)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>*@
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
